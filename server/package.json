{
  "name": "equihub-secure-api",
  "version": "1.0.0",
  "description": "Secure API proxy server for EquiHub mobile app",
  "main": "dist/secure-api-proxy.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/secure-api-proxy.js",
    "dev": "ts-node secure-api-proxy.ts",
    "watch": "nodemon --exec ts-node secure-api-proxy.ts",
    "postinstall": "npm run build",
    "production": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
